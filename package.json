{
  "name": "clean-code-react",
  "version": "0.1.0",
  "private": true,
  "dependencies": {
    "@testing-library/jest-dom": "4.2.4",
    "@testing-library/react": "9.3.2",
    "@testing-library/user-event": "7.1.2",
    "antd": "4.6.6",
    "extensible-duck": "1.6.0",
    "react": "16.13.1",
    "react-dom": "16.13.1",
    "react-scripts": "3.4.3",
    "redux": "4.0.5",
    "redux-saga": "1.1.3",
    "typescript": "~3.7.2"
  },
  "scripts": {
    "start": "react-scripts start",
    "build": "react-scripts build",
    "test": "react-scripts test",
    "test-nowatch": "CI=true react-scripts test",
    "eject": "react-scripts eject",
    "lint": "yarn lint:prettier && yarn lint:eslint && yarn typecheck",
    "lint:fix": "yarn lint:prettier && yarn lint:eslint --fix && yarn typecheck",
    "lint:eslint": "eslint ./src/**/*.{ts,tsx}",
    "lint:prettier": "prettier --write ./**/*.{ts,tsx}",
    "typecheck": "tsc"
  },
  "eslintConfig": {
    "extends": [
      "react-app",
      "plugin:fp/recommended"
    ],
    "rules": {
      "no-console": "warn",
      "fp/no-nil": "off",
      "fp/no-unused-expression": "off"
    },
    "plugins": [
      "fp"
    ]
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "devDependencies": {
    "@types/enzyme": "3.10.7",
    "@types/enzyme-adapter-react-16": "1.0.6",
    "@types/jest": "24.0.0",
    "@types/node": "12.0.0",
    "@types/react": "16.9.0",
    "@types/react-dom": "16.9.0",
    "enzyme": "3.11.0",
    "enzyme-adapter-react-16": "1.15.5",
    "enzyme-to-json": "3.6.1",
    "eslint-plugin-fp": "2.3.0",
    "husky": "4.3.0",
    "prettier": "2.1.2"
  },
  "husky": {
    "hooks": {
      "pre-commit": "yarn lint && yarn test-nowatch"
    }
  }
}
